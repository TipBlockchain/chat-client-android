<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sendTxt"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Message">

    <Button
        android:id="@+id/btn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="250dp"
        android:text="Back to Contacts" />

    <Button
        android:id="@+id/sendMsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="20dp"
        android:text="send"
        />

    <EditText
        android:id="@+id/msgText"
        android:layout_width="315dp"
        android:layout_height="67dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="2dp"
        android:ems="10"
        android:inputType="textPersonName"
         />

    <ScrollView
        android:id="@+id/msgReceivedScroll"
        android:layout_width="388dp"
        android:layout_height="400dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="9dp"
        android:layout_marginTop="225dp"
        android:layout_marginEnd="13dp"
        android:layout_marginBottom="106dp"
       >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="visible">

            <TextView
                android:id="@+id/msgReceivedBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Received" />

            <TextView
                android:id="@+id/msgSentBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Sent" />
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/toView"
        android:layout_width="76dp"
        android:layout_height="29dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="189dp"
        android:layout_marginEnd="146dp"
        android:text="TO : " />

    <TextView
        android:id="@+id/sendingtouser"
        android:layout_width="142dp"
        android:layout_height="32dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="266dp"
        android:layout_marginEnd="3dp"
        />

    <TextView
        android:id="@+id/textView"
        android:layout_width="110dp"
        android:layout_height="34dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="152dp"
        android:layout_marginEnd="296dp"
        android:text="Enter Key: " />

    <EditText
        android:id="@+id/keyField"
        android:layout_width="126dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="130dp"
        android:layout_marginTop="142dp"
        android:layout_marginEnd="155dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/keybtn"
        android:layout_width="126dp"
        android:layout_height="35dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="274dp"
        android:layout_marginTop="154dp"
        android:layout_marginEnd="11dp"
        android:text="Submit Key" />

</RelativeLayout>